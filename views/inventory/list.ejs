
  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='@fortawesome/fontawesome-free/css/all.min.css' />
  </head>
  <body>
    <% include ../partials/header.ejs %>
    <!-- Main Content -->
  <main class="container">
    <div class="row1">
        <h1><%= title %></h1>
        <br>
        <div>
            <a href="/inventory/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Contact
            </a>                
        </div>
    <br><br>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">Contact Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email Address</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < InventoryList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= InventoryList[count].contact_name %></td>
                        <td class="text-center"><%= InventoryList[count].contact_no %></td>
                        <td class="text-center"><%= InventoryList[count].email %></td>
                        
                        <td class="text-center">
                            <a href="/inventory/edit/<%= InventoryList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fa fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/inventory/delete/<%= InventoryList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
   
    <% include ../partials/footer.ejs %>
    </main>
    
  </body>
  </html>
  
  
  
  
  
